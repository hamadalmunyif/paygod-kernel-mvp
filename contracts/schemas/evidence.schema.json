{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceRecord",
  "description": "Proof supporting a decision.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "record_id": {
      "type": "string",
      "format": "uuid"
    },
    "record_type": {
      "const": "evidence"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "schema_id": {
      "type": "string",
      "format": "uri",
      "pattern": "^https://paygod\\.org/schemas/evidence$"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "decision_ref": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the decision record ID"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "uri": { "type": "string", "format": "uri" },
          "digest": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" }
        },
        "required": ["type", "uri", "digest"]
      }
    }
  },
  "required": [
    "record_id",
    "record_type",
    "timestamp",
    "source",
    "schema_id",
    "schema_version",
    "decision_ref",
    "artifacts"
  ]
}
